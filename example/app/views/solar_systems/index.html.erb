<p id="notice"><%= notice %></p>

<h1>Solar Systems</h1>

<table>
  <thead>
    <tr>
      <th>Slug</th>
      <th>Formal name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @solar_systems.each do |solar_system| %>
      <tr>
        <td><%= solar_system.slug %></td>
        <td><%= solar_system.formal_name %></td>
        <td><%= link_to 'Show', solar_system %></td>
        <td><%= link_to 'Edit', edit_solar_system_path(solar_system) %></td>
        <td><%= link_to 'Destroy', solar_system, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

